      "request": "launch",
      "program": "${workspaceFolder}/build/debug_automat",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "debug_automat",
